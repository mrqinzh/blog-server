<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mrqinzh.article.tag.TagMapper">

    <select id="page" resultType="Tag">
        SELECT * FROM tag
        WHERE
          1 = 1
        <if test="condition != null">
            AND tag_name like '%${condition}%'
        </if>
    </select>

</mapper>